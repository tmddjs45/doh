<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.doh.mapper.CBoardMapper">
	
	
	<insert id = "insert" >
	insert into cboard values(null, #{m_no}, #{c_title}, #{c_content}, now() )
	</insert>
	
	
	<select id= "getList" resultType="com.doh.domain.CBoardDTO">
	 <![CDATA[
	
		
		SELECT * FROM cboard ORDER BY c_no DESC LIMIT #{pageNum} ,#{amount}
		]]>
	</select>
	
	
	
	
	
	<select id= "read" resultType="com.doh.domain.CBoardDTO">
		select * from cboard where c_no = #{c_no}
	</select>
	
	<delete id = "delete" >
		delete from cboard where c_no=#{c_no} 
	</delete>
	
	<update id = "update">
		update cboard set c_title = #{c_title}, c_content = #{c_content} where c_no = #{c_no}
	</update>
	
	<select id ="getTotalCount" resultType="int">
		select count(*) from cboard where c_no>0
	
	</select>
</mapper>
